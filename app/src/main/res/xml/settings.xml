<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:key="acra.disable"
        android:title="Disable ACRA"
        android:summary="Send crash reports via email (NO PERSONAL INFORMATION)"
        android:defaultValue="false"/>
    <PreferenceCategory android:title="@string/navigation_setting_title">
        <ListPreference
            android:defaultValue="Most_recent"
            android:entries="@array/Start"
            android:entryValues="@array/StartValues"
            android:key="@string/pref_start_url"
            android:summary="%s."
            android:title="@string/start_url" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_location_enabled"
            android:summary="@string/location_enabled_summary"
            android:title="@string/location_enabled_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="hide_top_story"
            android:summary="@string/hide_top_story_panel_title"
            android:title="@string/hide_top_story_panel_summary" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="hide_editor_newsfeed"
            android:summary="@string/hide_editor_newsfeed_summary"
            android:title="@string/hide_editor_newsfeed_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="stop_images"
            android:summary="@string/stop_images_summary"
            android:title="@string/stop_images_title" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="hide_sponsored"
            android:summary="@string/hide_sponsored_summary"
            android:title="@string/hide_sponsored_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="hide_birthdays"
            android:summary="@string/hide_birthdays_summary"
            android:title="@string/hide_birthdays_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="hide_menu_bar"
            android:summary="@string/hide_menu_bar_summary"
            android:title="@string/hide_menu_bar_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="comments_recently"
            android:summary="@string/hide_recently_commented_summary"
            android:title="@string/hide_recently_commented" />
        <ListPreference
            android:defaultValue="en"
            android:key="@string/pref_locale_switcher"
            android:summary="@string/localSwitcherSummary"
            android:title="@string/localSwitcherTitle"
            android:entries="@array/appLocalesNames"
            android:entryValues="@array/appLocales"/>
        <ListPreference
            android:defaultValue="@integer/scale_default"
            android:key="textScale"
            android:summary="%s"
            android:title="@string/textScale"
            android:entries="@array/scalesText"
            android:entryValues="@array/scales"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/appearance_setting_title">
        <ListPreference
            android:defaultValue="Material"
            android:entries="@array/WebThemes"
            android:entryValues="@array/WebThemes"
            android:key="web_themes"
            android:summary="@string/web_themes_summary"
            android:title="@string/web_themes" />
        <ListPreference
            android:defaultValue="MaterialFBook"
            android:entries="@array/AppThemes"
            android:entryValues="@array/AppThemes"
            android:key="app_theme"
            android:summary="@string/app_themes_summary"
            android:title="@string/app_themes" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/general_setting_title">
        <SwitchPreference
            android:defaultValue="true"
            android:key="fab_enable"
            android:summary="@string/fab_enable_summary"
            android:title="@string/fab_enable" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/pref_save_data"
            android:summary="@string/save_data_summary"
            android:title="@string/save_data" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="clear_cache"
            android:summary="@string/clearcache_summary"
            android:title="@string/clearcache" />
        <Preference
            android:key="@string/pref_navigation_menu_settings"
            android:summary="@string/navigation_menu_settings_description"
            android:title="@string/navigation_menu_settings" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/more">
        <Preference
            android:key="@string/pref_more_and_credits"
            android:title="@string/more" />
    </PreferenceCategory>
</PreferenceScreen>